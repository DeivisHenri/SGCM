<style type="text/css">
    .page-content {
        background: #fff !important;
    }

    .login-page-container {
        width: 100%;
        display: flex;
        padding-top: 10%;
        text-align: center;
        align-items: center;
        justify-content: center;
    }

    .login-div-middle {
        width: 350px;
        padding: 35px;
        border: 3px solid #75a433;
        margin: 0 auto;
    }

    .login-table {
        width: 100%;
    }

    .login-status {
        padding-top: 8px;
    }

    .login-message {
        color: #232859;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 8pt;
    }

    .td-icon {
        color: #232859;
        font-size: 16pt !important;
        width: 50px;
        text-align: center;
    }

    .table-sp {
        height: 15pt;
    }

    .input-no-border {
        color: #414141;
        width: 100%;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 9.5pt;
        letter-spacing: 1px;
        padding-top: 5px;
        padding-left: 0;
        padding-right: 8pt;
        padding-bottom: 0;
        border: none !important;
        outline: none !important;
    }

    .div-control-base {
        height: 12px;
        width: 100%;
        border-top: none;
        border-left: 2px solid #263da8;
        border-right: 2px solid #263da8;
        border-bottom: 2px solid #263da8;
    }

    .span-control-invalid {
        color: #232859;
        font-family: Geneva, Verdana, sans-serif;
        font-size: 8pt;
        width: 100%;
        text-align: center;
    }

    .td-forgot-pass {
        text-align: right;
        padding-top: 5pt;
    }

    .td-forgot-pass {
        color: #a2a2a4;
        font-family: Geneva, Verdana, sans-serif;
        font-size: 8pt;
        cursor: pointer;
        transition: .4s;
        -moz-transition: .4s;
        -webkit-transition: .4s;
    }

        .td-forgot-pass:hover {
            color: #232859;
        }

    .td-button {
        padding-top: 15pt;
    }

    .btn-blue {
        color: #e5e5e5;
        background: #232859;
        font-family: Arial, Helvetica, sans-serif;
        cursor: pointer;
        position: absolute;
        width: 200px;
        height: 42px;
        margin-left: -100px;
        margin-top: 15px;
        border-left: 8px solid white;
        border-right: 8px solid white;
        border-top: none;
        border-bottom: none;
        transition: .4s;
        outline: none !important;
        -moz-transition: .4s;
        -webkit-transition: .4s;
        box-shadow: none !important;
        -moz-box-shadow: none !important;
        -webkit-box-shadow: none !important;
    }

        .btn-blue:hover {
            color: #fff;
            background: #263da8;
        }

        .btn-blue:focus {
            color: #fff;
        }

    #tx_login-error {
        display: none !important;
    }

    #tx_senha-error {
        display: none !important;
    }

