@using SGCM.Models.Consulta.EditarConsultaModel;
@model EditarConsultaModel

<div>
    <div class="row margin-row">
        <div class="col-lg-2"></div>

        @* CONDUTA *@
        <div class="col-lg-8 margin-right-15-px">
            <div class="form-group">
                @*<label asp-for="@Model.Conduta.conduta" class="control-label form-label"></label>*@
                <textarea asp-for="@Model.Conduta.conduta" style="height: 200px;" type="text" class="form-control form-input form-input-center"></textarea>
                <span asp-validation-for="@Model.Conduta.conduta" class="text-danger"></span>
            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>

    <h4 style="margin-top: 25px;">Selecione os exames para o paciente fazer:</h4>

    <div class="row margin-row center margin-top-bottom">
        <div class="col-lg-12 margin-right-15-px">
            <table id="dataTableExamesFixo" class="tableExamePedido table table-bordered table-striped table-hover" title="Tabela dos Exames" border="1" style="width: 1075px !important;">
                <thead>
                    <tr>
                        <th></th>
                        <th>ID</th>
                        <th>Nome</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <h4 style="margin-top: 25px;">Selecione os medicamentos para o paciente:</h4>

    <div class="row margin-row center margin-top-bottom">
        <div class="col-lg-12 margin-right-15-px">
            <table id="dataTableMedicamento" class="tableExamePedido table table-bordered table-striped table-hover" title="Tabela dos Medicamentos" border="1" style="width: 1075px !important;">
                <thead>
                    <tr>
                        <th></th>
                        <th>ID</th>
                        <th>Nome Genêrico</th>
                        <th>Nome Fabrica</th>
                        <th>Fabricante</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

</div>

<div class="form-group padding-top-15px">
    <button id="moveAnteriorDadosConduta" type="button" class="btn btn-info btn-brand btn-brand-big margin-right-15-px">&nbsp;Anterior&nbsp;</button>
    <button type="submit" class="btn btn-success btn-brand btn-brand-big">&nbsp;Salvar&nbsp;</button>
</div>

<div class="displayNone">
    <input id="ExamePedido" asp-for="@Model.ExamePedido" data-id="@Model.ExamePedido" />
    <input id="Medicamento" asp-for="@Model.Medicamento" data-id="@Model.Medicamento" />
</div>

@* IDs *@
<div class="displayNone">
    <div class="form-group">
        <input asp-for="@Model.Conduta.idConduta" />
    </div>

    <div class="form-group">
        <input asp-for="@Model.Conduta.idPacienteConduta" />
    </div>

    <div class="form-group">
        <input asp-for="@Model.Conduta.idConsultaConduta" />
    </div>
</div>