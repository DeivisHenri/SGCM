@using SGCM.Models.Paciente.CadastroPacienteModel;
@model CadastroPacienteModel

<div class="row margin-row">

    @* NOME *@
    <div class="col-lg-4 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.pessoa.Nome" class="control-label form-label"></label>
            <input asp-for="@Model.pessoa.Nome" class="form-control form-input form-input-center" />
            <span asp-validation-for="@Model.pessoa.Nome" class="text-danger"></span>
        </div>
    </div>    

    @* Sexo *@
    <div class="col-lg-3 margin-right-15-px">
        <div class="form-group display-inline-block">
            <label asp-for="@Model.pessoa.Sexo" class="control-label form-label"></label>
            <div class="" style="display: flex;">
                <div class="radio margin-left-right-15-px">
                    <label asp-for="@Model.pessoa.Sexo" class="radio-inline">
                        <input id="sexoFeminino" asp-for="@Model.pessoa.Sexo" type="radio" value="1">Feminino
                    </label>
                </div>
                <div class="radio margin-left-right-15-px">
                    <label asp-for="@Model.pessoa.Sexo" class="radio-inline">
                        <input id="sexoMasculino" asp-for="@Model.pessoa.Sexo" type="radio" value="2">Masculino
                    </label>
                </div>
            </div>
            <span asp-validation-for="@Model.pessoa.Sexo" class="text-danger"></span>
        </div>
    </div>

</div>

<div class="row margin-row">

    @* CPF *@
    <div class="col-lg-2 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.pessoa.CPF" class="control-label form-label"></label>
            <input asp-for="@Model.pessoa.CPF" class="form-control form-input form-input-center maskCPF" />
            <span asp-validation-for="@Model.pessoa.CPF" class="text-danger"></span>
        </div>
    </div>

    @* RG *@
    <div class="col-lg-2 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.pessoa.RG" class="control-label form-label"></label>
            <input asp-for="@Model.pessoa.RG" class="form-control form-input form-input-center maskRG" />
            <span asp-validation-for="@Model.pessoa.RG" class="text-danger"></span>
        </div>
    </div>

    @* DATA DE NASCIMENTO *@
    <div class="col-lg-2 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.pessoa.DataNascimento" class="control-label form-label"></label>
            <input asp-for="@Model.pessoa.DataNascimento" type="date" textmode="DateTimeLocal" class="form-control form-input form-input-center" id="dataNascimento" />
            <span asp-validation-for="@Model.pessoa.DataNascimento" class="text-danger"></span>
        </div>
    </div>

</div>

<div class="row margin-row">

    @* LOGRADOURO *@
    <div class="col-lg-3 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.pessoa.Logradouro" class="control-label form-label"></label>
            <input asp-for="@Model.pessoa.Logradouro" class="form-control form-input form-input-center" />
            <span asp-validation-for="@Model.pessoa.Logradouro" class="text-danger"></span>
        </div>
    </div>

    @* NÚMERO *@
    <div class="col-lg-1 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.pessoa.Numero" class="control-label form-label"></label>
            <input asp-for="@Model.pessoa.Numero" class="form-control form-input form-input-center" type="number" min="1" />
            <span asp-validation-for="@Model.pessoa.Numero" class="text-danger"></span>
        </div>
    </div>

    @* BAIRRO *@
    <div class="col-lg-3 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.pessoa.Bairro" class="control-label form-label"></label>
            <input asp-for="@Model.pessoa.Bairro" class="form-control form-input form-input-center" />
            <span asp-validation-for="@Model.pessoa.Bairro" class="text-danger"></span>
        </div>
    </div>

</div>

<div class="row margin-row">

    @* CIDADE *@
    <div class="col-lg-3 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.pessoa.Cidade" class="control-label form-label"></label>
            <input asp-for="@Model.pessoa.Cidade" class="form-control form-input form-input-center" />
            <span asp-validation-for="@Model.pessoa.Cidade" class="text-danger"></span>
        </div>
    </div>

    @* UF *@
    <div class="col-lg-1 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.pessoa.Uf" class="control-label form-label"></label>
            <input asp-for="@Model.pessoa.Uf" class="form-control form-input form-input-center" maxlength="2" minlength="2" type="text" id="pessoaUF" onblur="VerificaUF()"/>
            <span asp-validation-for="@Model.pessoa.Uf" class="text-danger"></span>
        </div>
    </div>

</div>

<div class="row margin-row">

    @* TELEFONE CELULAR *@
    <div class="col-lg-2 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.pessoa.TelefoneCelular" class="control-label form-label"></label>
            <input asp-for="@Model.pessoa.TelefoneCelular" class="form-control form-input form-input-center maskTelefone" />
            <span asp-validation-for="@Model.pessoa.TelefoneCelular" class="text-danger"></span>
        </div>
    </div>

    @* EMAIL *@
    <div class="col-lg-3 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.pessoa.Email" class="control-label form-label"></label>
            <input asp-for="@Model.pessoa.Email" class="form-control form-input form-input-center" />
            <span asp-validation-for="@Model.pessoa.Email" class="text-danger"></span>
        </div>
    </div>

</div>
