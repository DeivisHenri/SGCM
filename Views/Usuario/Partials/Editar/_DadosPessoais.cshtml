        <label asp-for="@Model.pessoa.IdPessoa" class="control-label form-label"></label>
        <input asp-for="@Model.pessoa.IdPessoa" class="form-control form-input form-input-center" />
        <span asp-validation-for="@Model.pessoa.IdPessoa" class="text-danger"></span>
    </div>

    <div id="dataCadastro">
        <label asp-for="@Model.pessoa.IdMedico" class="control-label form-label"></label>
        <input asp-for="@Model.pessoa.IdMedico" class="form-control form-input form-input-center" />
        <span asp-validation-for="@Model.pessoa.IdMedico" class="text-danger"></span>
    </div>
</div>
