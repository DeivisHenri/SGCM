@using SGCM.Models.Usuario.EditarUsuarioModel;
@model EditarUsuarioModel

<div class="row margin-row">
    <div class="col-lg-5"></div>

    @* USERNAME *@
    <div class="col-lg-2 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.usuario.Username" class="control-label form-label"></label>
            <input asp-for="@Model.usuario.Username" class="form-control form-input form-input-center" id="nome" />
            <span asp-validation-for="@Model.usuario.Username" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-5"></div>
</div>

<div class="row margin-row">
    <div class="col-lg-5"></div>

    @* PASSWORD *@
    <div class="col-lg-2 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.usuario.Password" class="control-label form-label"></label>
            <input asp-for="@Model.usuario.Password" class="form-control form-input form-input-center" />
            <span asp-validation-for="@Model.usuario.Password" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-5"></div>
</div>

<div class="row margin-row">
    <div class="col-lg-5"></div>

    @* CONFIRM PASSWORD *@
    <div class="col-lg-2 margin-right-15-px">
        <div class="form-group">
            <label asp-for="@Model.usuario.ConfirmPassword" class="control-label form-label"></label>
            <input asp-for="@Model.usuario.ConfirmPassword" class="form-control form-input form-input-center" />
            <span asp-validation-for="@Model.usuario.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-5"></div>
</div>

<div class="form-group padding-top-15px">
    <button id="moveAnteriorDadosLogin" type="button" class="btn btn-info btn-brand btn-brand-big margin-right-15-px">&nbsp;Anterior&nbsp;</button>
    <button id="moveProximoDadosLogin" type="button" class="btn btn-primary btn-brand btn-brand-big">&nbsp;Próximo&nbsp;</button>
</div>

<div id="esconderInputs" class="displayNone">
    <div id="dataCadastro">
        <label asp-for="@Model.usuario.IdUsuario" class="control-label form-label"></label>
        <input asp-for="@Model.usuario.IdUsuario" class="form-control form-input form-input-center" />
        <span asp-validation-for="@Model.usuario.IdUsuario" class="text-danger"></span>
    </div>

    <div id="dataCadastro">
        <label asp-for="@Model.usuario.DataCadastro" class="control-label form-label"></label>
        <input asp-for="@Model.usuario.DataCadastro" type="date" textmode="DateTimeLocal" class="form-control form-input form-input-center" />
        <span asp-validation-for="@Model.usuario.DataCadastro" class="text-danger"></span>
    </div>

    <div id="statusDesativacao">
        <label asp-for="@Model.usuario.statusDesativado" class="control-label form-label"></label>
        <input asp-for="@Model.usuario.statusDesativado" class="form-control form-input form-input-center" />
        <span asp-validation-for="@Model.usuario.statusDesativado" class="text-danger"></span>
    </div>
</div>