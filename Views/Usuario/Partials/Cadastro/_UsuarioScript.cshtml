<script type='text/javascript'>
    (function ($) {
        $(function () {
            $(document).ready(function ($) {
                $('.maskTelefone').mask('(99) 99999-9999');
                $('.maskCPF').mask('999.999.999-99');
                $('.maskRG').mask('99.999.999');

                $('#nome').focus();
                var dataAtual = new Date();
                $('#dataNascimento').val(dataAtual.toLocaleDateString().split('/')[2] + "-" + dataAtual.toLocaleDateString().split('/')[1] + "-" + dataAtual.toLocaleDateString().split('/')[0]);
            });
        });
    })(jQuery);

    $("#tipoUsuarioMedico").click(function () {
        if ($('#tipoUsuarioRecepcionista').is(":checked")) {
            $("#tipoUsuarioRecepcionista").prop("checked", false);
        }
    });

    $("#tipoUsuarioRecepcionista").click(function () {
        if ($('#tipoUsuarioMedico').is(":checked")) {
            $("#tipoUsuarioMedico").prop("checked", false);
        }
    });

    $("#sexoFeminino").click(function () {
        if ($('#sexoMasculino').is(":checked")) {
            $("#sexoMasculino").prop("checked", false);
        }
    });

    $("#sexoMasculino").click(function () {
        if ($('#sexoFeminino').is(":checked")) {
            $("#sexoFeminino").prop("checked", false);
        }
    }); 

    $('#btnSelecionarTodos').click(function () {
        $("input[type='checkbox']").prop("checked", true);
    });

    $('#moveProximoDadosPessoais').click(function() {
        var target = $(".nav-tabs li.active");
        var sibbling = target.next();
        sibbling.children("a").tab("show");
    });

    $('#moveAnteriorDadosLogin').click(function () {
        var target = $(".nav-tabs li.active");
        var sibbling = target.prev();
        sibbling.children("a").tab("show");
    });

    $('#moveProximoDadosLogin').click(function () {
        var target = $(".nav-tabs li.active");
        var sibbling = target.next();
        sibbling.children("a").tab("show");
    });

    $('#moveAnteriorDadosPermissoes').click(function () {
        var target = $(".nav-tabs li.active");
        var sibbling = target.prev();
        sibbling.children("a").tab("show");
    });

    function VerificaUF() {
        var valorCampo = document.getElementById('pessoaUF').value.toUpperCase();

        if (valorCampo !== null && valorCampo !== 'undefined' && valorCampo !== "" && valorCampo.length === 2) {
            $.post('/Usuario/VerificaUF', { valorCampo: valorCampo }, function (data) {
                alert(data);
            });
        }
    }

</script>